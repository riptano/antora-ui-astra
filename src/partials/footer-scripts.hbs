<script src="{{{uiRootPath}}}/js/site.js"></script>
<script async src="{{{uiRootPath}}}js/vendor/highlight.js"></script>

<script src="https://cdn.jsdelivr.net/npm/docsearch.js@v2.6.3/dist/cdn/docsearch.min.js"></script>
<script>
  docsearch({
    // Your apiKey and indexName will be given to you once
    // we create your config
    {{#with site.keys.algolia_apiKey}}
        apiKey: "{{this}}",
    {{/with}}
    {{#with site.keys.algolia_index}}
        indexName: "{{this}},
    {{/with}}
    //appId: '<APP_ID>', // Should be only included if you are running DocSearch on your own.
    // Replace inputSelector with a CSS selector
    // matching your search input
    inputSelector: "",
    // Set debug to true to inspect the dropdown
    debug: false,
  });
</script>
